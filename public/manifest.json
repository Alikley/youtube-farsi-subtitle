{
  "manifest_version": 3,
  "name": "YouTube Farsi Subtitle",
  "version": "1.0.0",
  "description": "Capture YouTube audio, send to Whisper, and show subtitles.",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": [
        "content/addCaptionButton.js",
        "content/captions.js",
        "content/index.js"  
      ],
      "css": ["content/captions.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",  
    "default_title": "YouTube Farsi Subtitle"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "audio-capture.js",
        "content/*.js",
        "content/*.css",
        "icons/*.svg",
        "icons/*.png"
      ],
      "matches": ["*://www.youtube.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-inline'; object-src 'self'; sandbox allow-scripts allow-same-origin allow-forms allow-popups allow-modals"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}