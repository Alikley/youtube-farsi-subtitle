{
  "manifest_version": 3,
  "name": "YouTube Farsi Subtitle",
  "version": "1.0.0",
  "description": "Capture YouTube audio, send to Whisper, and show subtitles.",

  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": [
        "content/addCaptionButton.js",
        "content/captions.js",
        "content/index.js"
      ],
      "css": ["content/caption.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "YouTube Farsi Subtitle"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/*.js",
        "content/*.css",
        "icons/*.png",
        "static/*"
      ],
      "matches": ["*://www.youtube.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
