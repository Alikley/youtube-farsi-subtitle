{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "public/background",
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["src/background/index.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.tsx", "**/*.jsx"]
}
